{
  "name": "lego-brick-finder",
  "version": "1.0.0",
  "description": "Chrome Extension for finding Lego bricks on Rebrickable",
  "scripts": {
    "build": "node scripts/build.js",
    "watch": "nodemon --watch src --watch manifest.json --exec 'npm run build'",
    "zip": "cd dist && zip -r ../lego-brick-finder.zip .",
    "dev": "npm run build && npm run watch"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "dotenv": "^16.3.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "dotenv-webpack": "^8.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "private": true,
  "overrides": {
    "semver": "^7.5.4",
    "got": "^11.8.5",
    "json5": "^2.2.3"
  }
} 